LTEXT           "Bar Color:", IDC_STATIC, 10, 90, 50, 10
EDITTEXT        IDC_EDIT_BARCOLOR, 70, 90, 70, 14, ES_AUTOHSCROLL

LTEXT           "Text Color:", IDC_STATIC, 10, 110, 50, 10
EDITTEXT        IDC_EDIT_TEXTCOLOR, 70, 110, 70, 14, ES_AUTOHSCROLL

LTEXT           "Position X:", IDC_STATIC, 10, 130, 50, 10
EDITTEXT        IDC_EDIT_POSX, 70, 130, 50, 14, ES_AUTOHSCROLL | ES_NUMBER

LTEXT           "Position Y:", IDC_STATIC, 10, 150, 50, 10
EDITTEXT        IDC_EDIT_POSY, 70, 150, 50, 14, ES_AUTOHSCROLL | ES_NUMBER

LTEXT           "Width:", IDC_STATIC, 10, 170, 50, 10
