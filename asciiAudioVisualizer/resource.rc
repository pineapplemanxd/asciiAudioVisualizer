#include "resource.h"
#include <windows.h>


IDD_SETTINGS_DIALOG DIALOGEX 0, 0, 250, 300
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Visualizer Settings"
FONT 8, "MS Shell Dlg", 400, 0, 0x1
BEGIN
LTEXT           "Sensitivity:", IDC_STATIC, 10, 10, 50, 10
EDITTEXT        IDC_EDIT_SENSITIVITY, 70, 10, 50, 14, ES_AUTOHSCROLL | ES_NUMBER

LTEXT           "Bar Width:", IDC_STATIC, 10, 30, 50, 10
EDITTEXT        IDC_EDIT_BARWIDTH, 70, 30, 50, 14, ES_AUTOHSCROLL | ES_NUMBER

LTEXT           "Spacing:", IDC_STATIC, 10, 50, 50, 10
EDITTEXT        IDC_EDIT_SPACING, 70, 50, 50, 14, ES_AUTOHSCROLL | ES_NUMBER

LTEXT           "Bar Count:", IDC_STATIC, 10, 70, 50, 10
