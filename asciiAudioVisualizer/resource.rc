LTEXT           "Height:", IDC_STATIC, 10, 190, 50, 10
EDITTEXT        IDC_EDIT_HEIGHT, 70, 190, 50, 14, ES_AUTOHSCROLL | ES_NUMBER

CHECKBOX        "Always on Top", IDC_BUTTON_TOPMOST, 10, 210, 80, 10

DEFPUSHBUTTON   "Apply", IDC_BUTTON_APPLY, 10, 230, 50, 14
PUSHBUTTON      "Cancel", IDCANCEL, 70, 230, 50, 14
END